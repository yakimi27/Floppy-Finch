<Window x:Class="FloppyFinchWPF.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Floppy Finch" Height="600" Width="400">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Game over" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="50" />
            <TextBlock Grid.Row="1" x:Name="LooseScreenScoreTextBlock" Text="You scored: 0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" FontSize="30" />

        </Grid>

        <Button Content="Play Again" Click="PlayAgainButton_Click" Width="300" Height="75" Margin="0 0 0 0" />
        <Button Content="Exit" Click="ExitButton_Click" Width="300" Height="75" Margin="0 200 0 0" />
    </Grid>
</Window>