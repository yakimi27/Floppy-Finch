<Window x:Class="FloppyFinchMenus.MainMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="FloppyFinch" Height="600" Width="400" MinHeight="600" MinWidth="400">
    <Grid>
        <Canvas Cursor="Help" Height="15" Width="15" Background="Transparent" VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Margin="8" ToolTipService.InitialShowDelay="100">
            <Line X1="0" Y1="0" X2="15" Y2="0" Stroke="Black" />
            <Line X1="15" Y1="0" X2="15" Y2="15" Stroke="Black" />
            <Canvas.ToolTip>
                <ToolTip Content="To adjust resolution resize window." />
            </Canvas.ToolTip>
        </Canvas>
        <Canvas Cursor="Help" Height="15" Width="15" Background="Transparent" VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="8" ToolTipService.InitialShowDelay="100">
            <Line X1="0" Y1="15" X2="15" Y2="15" Stroke="Black" />
            <Line X1="0" Y1="0" X2="0" Y2="15" Stroke="Black" />
            <Canvas.ToolTip>
                <ToolTip Content="To adjust resolution resize window." />
            </Canvas.ToolTip>
        </Canvas>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Floppy Finch" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="32" />
            <Button x:Name="ButtonPlay" Click="ButtonPlay_OnClick" Grid.Row="1" Content="Play" Margin="50 20"
                    MaxWidth="400" MaxHeight="85" />
            <Button x:Name="ButtonSettings" Click="ButtonSettings_OnClick" Grid.Row="2" Content="Settings"
                    Margin="50 20"
                    MaxWidth="400" MaxHeight="85" />
            <Button x:Name="ButtonLeaderboards" Click="ButtonLeaderboards_OnClick" Grid.Row="3" Content="Leaderboard"
                    Margin="50 20" MaxWidth="400" MaxHeight="85" />
            <Button x:Name="ButtonExit" Click="ButtonExit_OnClick" Grid.Row="4" Content="Exit" Margin="50 20"
                    MaxWidth="400" MaxHeight="85" />
        </Grid>

    </Grid>
</Window>