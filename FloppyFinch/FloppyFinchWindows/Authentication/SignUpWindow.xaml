<Window x:Class="FloppyFinchWindows.Authentication.SignUpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Floppy Finch" Height="600" Width="450">
    <Grid Background="#e06119">

        <Grid Background="LightSkyBlue">
            <Canvas x:Name="CloudCanvas" SizeChanged="CloudCanvas_OnSizeChanged">
                <Ellipse Fill="#CCFFFFFF" Width="120" Height="60">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="BackCloud1Transform" />
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Ellipse Fill="#CCFFFFFF" Width="100" Height="50">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="BackCloud2Transform" />
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Ellipse Fill="#DDFFFFFF" Width="180" Height="90">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="MiddleCloud1Transform" />
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Ellipse Fill="#DDFFFFFF" Width="140" Height="70">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="MiddleCloud2Transform" />
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Ellipse Fill="#EEFFFFFF" Width="150" Height="75">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="FrontCloud1Transform" />
                    </Ellipse.RenderTransform>
                </Ellipse>

                <Ellipse Fill="#EEFFFFFF" Width="160" Height="80">
                    <Ellipse.RenderTransform>
                        <TranslateTransform x:Name="FrontCloud2Transform" />
                    </Ellipse.RenderTransform>
                </Ellipse>
            </Canvas>
        </Grid>

        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="350">
            <Label Style="{StaticResource HeaderTextStyle}" Content="Floppy Finch" HorizontalContentAlignment="Center"
                   FontSize="26" Margin="0 0 0 20" />
            <Label Content="Username" Margin="0 10 0 0" Style="{StaticResource SmallLabelNoBottomStyle}"
                   ToolTip="Username must be 3–16 characters. Use only A–Z, 0–9, underscores (_) or hyphens (-)" />
            <TextBox Style="{StaticResource InputTextBoxStyle}" x:Name="TextBoxUsername" TextChanged="TextBoxUsername_OnTextChanged" Height="45"
                     VerticalContentAlignment="Center" />
            <Label Content="Password" Margin="0 10 0 0" Style="{StaticResource SmallLabelNoBottomStyle}"
                   ToolTip="Password must be 4–24 characters. Include one lowercase, one uppercase letter, and one number." />
            <StackPanel>
                <TextBox Style="{StaticResource InputTextBoxStyle}" x:Name="TextBoxPassword" TextChanged="TextBoxPassword_OnTextChanged" Height="45"
                         VerticalContentAlignment="Center" Visibility="Collapsed" />
                <PasswordBox Style="{StaticResource InputPasswordBoxStyle}" x:Name="PasswordBoxPassword" PasswordChanged="PasswordBoxPassword_OnPasswordChanged"
                             Height="45"
                             VerticalContentAlignment="Center" Visibility="Visible" />
            </StackPanel>
            <Label Content="Confirm password" Margin="0 10 0 0" Style="{StaticResource SmallLabelNoBottomStyle}" />
            <StackPanel>
                <TextBox Style="{StaticResource InputTextBoxStyle}" x:Name="TextBoxConfirmPassword" TextChanged="TextBoxConfirmPassword_OnTextChanged" Height="45"
                         VerticalContentAlignment="Center" Visibility="Collapsed" />
                <PasswordBox Style="{StaticResource InputPasswordBoxStyle}" x:Name="PasswordBoxConfirmPassword"
                             PasswordChanged="PasswordBoxConfirmPassword_OnPasswordChanged"
                             Height="45"
                             VerticalContentAlignment="Center" Visibility="Visible" />
            </StackPanel>
            <Label x:Name="LabelSignUpHelper" Content="SomeContent" Visibility="Collapsed" Margin="0 10 0 0" FontSize="10"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0" VerticalContentAlignment="Center" x:Name="CheckBoxRememberMe"
                          Content="Remember me" Margin="0 20 0 0" />
                <CheckBox Grid.Column="1" VerticalContentAlignment="Center" x:Name="CheckBoxShowPassword"
                          Unchecked="CheckBoxShowPassword_OnUnchecked"
                          Checked="CheckBoxShowPassword_OnChecked" Content="Show password" Margin="0 20 0 0" />
            </Grid>

            <Button Style="{StaticResource ButtonStyle}" x:Name="ButtonSignUp" Click="ButtonSignUp_OnClick"
                    IsEnabled="False" Content="Sign Up"
                    Margin="0 20" Height="50" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="135" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Style="{StaticResource ButtonStyle}" Grid.Column="0" Click="ButtonSignIn_OnClick"
                        Content="Sign In"
                        Margin="0 0 10 0" Height="50" />
                <Button Style="{StaticResource ButtonStyle}" Grid.Column="1" Click="ButtonPlayAsGuest_OnClick"
                        Content="Play as Guest" Margin="10 0 0 0"
                        Height="50"
                        ToolTip="Your score and progress will not be saved." ToolTipService.InitialShowDelay="100" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>