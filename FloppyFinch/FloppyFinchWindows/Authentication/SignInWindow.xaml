<Window x:Class="FloppyFinchWindows.Authentication.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Floppy Finch - Sign In" Height="600" Width="400"
        Loaded="SignInWindow_OnLoaded">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <Label Content="Floppy Finch" HorizontalContentAlignment="Center" FontSize="26" Margin="0 0 0 20" />
            <Label Content="Username" />
            <TextBox x:Name="TextBoxUsername" TextChanged="TextBoxUsername_OnTextChanged" Height="30"
                     VerticalContentAlignment="Center" />
            <Label Content="Password" />
            <StackPanel>
                <TextBox x:Name="TextBoxPassword" TextChanged="TextBoxPassword_OnTextChanged" Height="30"
                         VerticalContentAlignment="Center" Visibility="Collapsed" />
                <PasswordBox x:Name="PasswordBoxPassword" PasswordChanged="PasswordBoxPassword_OnPasswordChanged"
                             Height="30" VerticalContentAlignment="Center" Visibility="Visible" />
            </StackPanel>
            <Label x:Name="LabelSignInHelper" Content="SomeContent" Visibility="Collapsed" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0" x:Name="CheckBoxRememberMe" Content="Remember me" Margin="0 20 0 0" />
                <CheckBox Grid.Column="1" x:Name="CheckBoxShowPassword" Checked="CheckBoxShowPassword_OnChecked"
                          Unchecked="CheckBoxShowPassword_OnUnchecked" Content="Show password" Margin="0 20 0 0" />
            </Grid>

            <Button x:Name="ButtonSignIn" Click="ButtonSignIn_OnClick" IsEnabled="False" Content="Sign In"
                    Margin="0 20" Height="30" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Click="ButtonSignUp_OnClick" Content="Sign Up" Margin="0 0 10 0" Height="24" />
                <Button Grid.Column="1" Click="ButtonPlayAsGuest_OnClick" Content="Play as Guest" Margin="10 0 0 0"
                        Height="24"
                        ToolTip="Your score and progress will not be saved." ToolTipService.InitialShowDelay="100" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>