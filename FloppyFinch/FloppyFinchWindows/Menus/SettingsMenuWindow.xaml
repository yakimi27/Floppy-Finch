<Window x:Class="FloppyFinchWindows.Menus.SettingsMenuWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:resources="clr-namespace:FloppyFinchWindows.Resources"
        mc:Ignorable="d"
        Title="Floppy Finch" Height="auto" Width="auto" MinHeight="600" MinWidth="400"
        Closing="SettingsMenuWindow_OnClosing">
    <Grid>
        <Canvas Cursor="Help" Height="15" Width="15" Background="Transparent" VerticalAlignment="Top"
                HorizontalAlignment="Right" Margin="8" ToolTipService.InitialShowDelay="100">
            <Line X1="0" Y1="0" X2="15" Y2="0" Stroke="Black" />
            <Line X1="15" Y1="0" X2="15" Y2="15" Stroke="Black" />
            <Canvas.ToolTip>
                <ToolTip Content="{x:Static resources:Strings.ResizeWindowToolTipText}" />
            </Canvas.ToolTip>
        </Canvas>
        <Canvas Cursor="Help" Height="15" Width="15" Background="Transparent" VerticalAlignment="Bottom"
                HorizontalAlignment="Left"
                Margin="8" ToolTipService.InitialShowDelay="100">
            <Line X1="0" Y1="15" X2="15" Y2="15" Stroke="Black" />
            <Line X1="0" Y1="0" X2="0" Y2="15" Stroke="Black" />
            <Canvas.ToolTip>
                <ToolTip Content="{x:Static resources:Strings.ResizeWindowToolTipText}" />
            </Canvas.ToolTip>
        </Canvas>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Grid.Column="0" x:Name="ButtonBack" Click="ButtonBack_OnClick"
                    Content="{x:Static resources:Strings.BackButtonText}" Width="75"
                    Height="25"
                    HorizontalAlignment="Left" Margin="35 0 " />
            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Margin="35 0">
                <Label Content="{x:Static resources:Strings.GameplaySettingsLabelText}" Margin="0 5" FontSize="16" />
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="180" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Content="{x:Static resources:Strings.ChoseResolutionLabelText}"
                           Margin="0 10 0 0" />
                    <ComboBox Grid.Column="1" Grid.Row="0" x:Name="ComboBoxResolution"
                              SelectionChanged="ComboBoxResolution_OnSelectionChanged" Margin="0 10 0 0" />

                    <Label Grid.Column="0" Grid.Row="1" Content="{x:Static resources:Strings.ChoseAppearanceLabelText}"
                           Margin="0 10 0 0" />
                    <ComboBox Grid.Column="1" Grid.Row="1" Margin="0 10 0 0">
                        <ComboBoxItem x:Name="BoxItemLightMode"
                                      Content="{x:Static resources:Strings.AppearanceLightModeComboBoxItemText}" />
                        <ComboBoxItem x:Name="BoxItemDarkMode"
                                      Content="{x:Static resources:Strings.AppearanceDarkModeComboBoxItemText}" />
                    </ComboBox>

                    <Label Grid.Column="0" Grid.Row="2" Content="{x:Static resources:Strings.ChoseLanguageLabelText}"
                           Margin="0 10 0 0" />
                    <ComboBox Grid.Column="1" Grid.Row="2" x:Name="ComboBoxLanguage"
                              SelectionChanged="ComboBoxLanguage_OnSelectionChanged" Margin="0 10 0 0">
                        <ComboBoxItem Content="English" x:Name="ComboBoxItemLanguageEnglish" />
                        <ComboBoxItem Content="Українська" x:Name="ComboBoxItemLanguageUkrainian" />
                    </ComboBox>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Margin="35 0">
                <Label Content="{x:Static resources:Strings.AccountSettingsLabelText}" Margin="0 5" FontSize="16" />
                <Button x:Name="ButtonSignOut" Click="ButtonSignOut_OnClick"
                        Content="{x:Static resources:Strings.SignOutButtonText}" Margin="0 5"
                        Height="30" />
                <Button x:Name="ButtonResetScreenPosition" Click="ButtonResetScreenPosition_OnClick"
                        Content="{x:Static resources:Strings.ResetScreenPositionButtonText}"
                        Margin="0 5" Height="30" />
                <Button x:Name="ButtonClearAccountData" Click="ButtonClearAccountData_OnClick"
                        Content="{x:Static resources:Strings.ClearAccountDataButtonText}" Margin="0 5" Height="30" />
                <Button x:Name="ButtonDeleteAccount" Click="ButtonDeleteAccount_OnClick"
                        Content="{x:Static resources:Strings.DeleteAccountButtonText}"
                        Margin="0 5" Height="30" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>