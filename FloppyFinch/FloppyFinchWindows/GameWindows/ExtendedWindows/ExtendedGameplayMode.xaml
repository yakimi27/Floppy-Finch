<Window x:Class="FloppyFinchGameModes.GameWindows.ExtendedWindows.ExtendedGameplayMode"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        Title="Floppy Finch" Height="auto" Width="auto" MinHeight="600" MinWidth="400"
        ResizeMode="NoResize"
        KeyDown="Window_KeyDown" MouseDown="Window_MouseDown">
    <Grid>
        <Canvas Name="GameCanvas" Background="LightBlue" />
        <TextBlock x:Name="ScoreText" Text="0" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0 100 0 0"
                   FontSize="26" Visibility="Hidden" />
        <TextBlock x:Name="KeyWait" Text="Press space to start" VerticalAlignment="Top" HorizontalAlignment="Center"
                   Margin="0 200 0 0"
                   FontSize="26" Visibility="Visible" />
        <Button x:Name="ButtonReturnMainMenu" Click="ButtonReturnMainMenu_OnClick"
                Content="Main Menu" Width="75"
                Height="25"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15" Visibility="Visible" />
        <Button x:Name="ButtonGamePause" Click="ButtonGamePause_OnClick" Content="Pause"
                Width="75"
                Height="25"
                HorizontalAlignment="Left" VerticalAlignment="Top" Margin="15" Visibility="Hidden"
                Focusable="False" />

        <Grid VerticalAlignment="Top" HorizontalAlignment="Right" Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Rectangle Grid.Column="0" Width="10" Height="10" Fill="Red" />
            <TextBlock Grid.Column="1" Text="1" x:Name="HeartsCountLabel" Margin="10 0 0 0" />
        </Grid>
        <UniformGrid x:Name="PowerupSpaceGrid" Rows="1" VerticalAlignment="Bottom" />
    </Grid>
</Window>