<Window x:Class="FloppyFinchWindows.GameModes.SpeedRaceMode.SpeedRaceModeDifficultyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:resources="clr-namespace:FloppyFinchWindows.Resources"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Floppy Finch" Height="220" Width="350">
    <Grid>
        <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="25" />
                <RowDefinition Height="50" />
                <RowDefinition Height="25" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label Grid.ColumnSpan="3" Grid.Column="0" Grid.Row="0"
                   Content="{x:Static resources:Strings.SpeedPresetLabelContent}" />
            <Button Click="SlowSpeedButton_OnClick" Content="{x:Static resources:Strings.SpeedSlowButtonText}"
                    ToolTip="{x:Static resources:Strings.SlowSpeedToolTipText}"
                    ToolTipService.InitialShowDelay="500"
                    Grid.Column="0" Grid.Row="1" Margin="5" />
            <Button Click="FasterSpeedButton_OnClick" Content="{x:Static resources:Strings.SpeedFasterButtonText}"
                    ToolTip="{x:Static resources:Strings.FasterSpeedToolTipText}"
                    ToolTipService.InitialShowDelay="500"
                    Grid.Column="1" Grid.Row="1" Margin="5" />
            <Button Click="FastSpeedButton_OnClick" Content="{x:Static resources:Strings.SpeedFastButtonText}"
                    ToolTip="{x:Static resources:Strings.FastSpeedToolTipText}"
                    ToolTipService.InitialShowDelay="500"
                    Grid.Column="2" Grid.Row="1" Margin="5" />
            <Label Content="{x:Static resources:Strings.SetOwnSpeedLabelContent}"
                   ToolTip="{x:Static resources:Strings.SpeedToolTipText}"
                   ToolTipService.InitialShowDelay="500" Grid.Column="0" Grid.Row="2" VerticalContentAlignment="Center" />
            <TextBox x:Name="OwnSpeedTextBox" TextChanged="OwnSpeedTextBox_OnTextChanged" Grid.Column="1"
                     Grid.ColumnSpan="2" Grid.Row="2"
                     VerticalContentAlignment="Center" Margin="5 0" />
            <Button x:Name="OwnSpeedStartButton" Click="OwnSpeedStartButton_OnClick"
                    Content="{x:Static resources:Strings.StartButtonText}" Grid.Row="3"
                    Grid.Column="0" Grid.ColumnSpan="3"
                    Margin="5" IsEnabled="False" />
        </Grid>
    </Grid>
</Window>