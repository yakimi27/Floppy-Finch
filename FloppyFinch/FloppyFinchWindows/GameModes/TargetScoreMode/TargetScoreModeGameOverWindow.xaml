<Window x:Class="FloppyFinchWindows.GameModes.TargetScoreMode.TargetScoreModeGameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:resources="clr-namespace:FloppyFinchWindows.Resources"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Floppy Finch" Height="auto" Width="auto" MinHeight="600" MinWidth="400"
        Closing="TargetScoreModeGameOverWindow_OnClosing">
    <Grid>
        <Image x:Name="GameImage" HorizontalAlignment="Center" VerticalAlignment="Top" Height="auto"
               Width="auto" Stretch="Fill" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
            </Grid.RowDefinitions>
            <Label x:Name="GameOverLabel" Grid.Row="0" Content="{x:Static resources:Strings.GameOverLabelContent}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top" FontSize="50" />
            <TextBlock Grid.Row="1" x:Name="LoseScreenScoreTextBlock" Text="0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" FontSize="30" />
            <Button Grid.Row="2" Content="{x:Static resources:Strings.RestartButtonText}" Click="RestartButton_Click"
                    Margin="50 20" MaxWidth="400"
                    MaxHeight="85" />
            <Button Grid.Row="3" Content="{x:Static resources:Strings.MainMenuButtonText}" Click="MainMenuButton_Click"
                    Margin="50 20" MaxWidth="400"
                    MaxHeight="85" />
            <Button Grid.Row="4" Content="{x:Static resources:Strings.ExitButtonText}" Click="ExitButton_Click"
                    Margin="50 20" MaxWidth="400" MaxHeight="85" />
        </Grid>

    </Grid>
</Window>