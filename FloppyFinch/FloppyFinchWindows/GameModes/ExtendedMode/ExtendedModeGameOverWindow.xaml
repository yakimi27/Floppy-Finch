<Window x:Class="FloppyFinchWindows.GameModes.ExtendedMode.ExtendedModeGameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Floppy Finch" Height="auto" Width="auto" MinHeight="600" MinWidth="400"
        Closing="ExtendedModeGameOverWindow_OnClosing">
    <Grid>
        <Image x:Name="GameImage" HorizontalAlignment="Center" VerticalAlignment="Top" Height="auto"
               Width="auto" Stretch="Fill" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="100" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
            </Grid.RowDefinitions>
            <Label x:Name="GameOverLabel" Grid.Row="0" Content="Game over" HorizontalAlignment="Center"
                   VerticalAlignment="Top" FontSize="50" />
            <TextBlock Grid.Row="1" x:Name="LoseScreenScoreTextBlock" Text="You scored: 0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top" FontSize="30" />
            <Button Grid.Row="2" Content="Restart" Click="RestartButton_Click" Margin="50 20" MaxWidth="400"
                    MaxHeight="85" />
            <Button Grid.Row="3" Content="Main menu" Click="MainMenuButton_Click" Margin="50 20" MaxWidth="400"
                    MaxHeight="85" />
            <Button Grid.Row="4" Content="Exit" Click="ExitButton_Click" Margin="50 20" MaxWidth="400" MaxHeight="85" />
        </Grid>

    </Grid>
</Window>