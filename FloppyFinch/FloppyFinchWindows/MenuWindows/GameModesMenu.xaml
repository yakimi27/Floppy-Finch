<Window x:Class="FloppyFinchGameModes.MenuWindows.GameModesMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Floppy Finch" Height="auto" Width="auto" MinHeight="600" MinWidth="400">
    <Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
                <RowDefinition Height="*" MaxHeight="150" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Choose game mode" VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="32" />
            <Button x:Name="ButtonClassicMode" Click="ButtonClassicMode_OnClick" Grid.Row="1" Content="Classic"
                    Margin="50 20"
                    MaxWidth="400" MaxHeight="85" />
            <Button x:Name="ButtonTargetScoreMode" Click="ButtonTargetScoreMode_OnClick" Grid.Row="2"
                    Content="Target score" Margin="50 20"
                    MaxWidth="400" MaxHeight="85" />
            <Button x:Name="ButtonExtendedMode" Click="ButtonExtendedMode_OnClick" Grid.Row="3" Content="Extended"
                    Margin="50 20" MaxWidth="400" MaxHeight="85" />
            <Button x:Name="ButtonMainMenu" Click="ButtonBackToMainMenu_OnClick" Grid.Row="4"
                    Content="Back to main menu"
                    Margin="50 20"
                    MaxWidth="400" MaxHeight="85" />
        </Grid>
    </Grid>
</Window>